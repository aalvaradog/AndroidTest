<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/nombrePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Carlos Santana" />

    <Button
        android:id="@+id/editarPerfil"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="79dp"
        android:backgroundTint="@color/azul_oscuro"
        android:text="Editar informaciÃ³n de perfil"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePerfil" />

    <Button
        android:id="@+id/anunciosPerfil"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/azul_oscuro"
        android:text="Anuncios publicados"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarPerfil" />

    <Button
        android:id="@+id/listaPerfil"
        android:layout_width="360sp"
        android:layout_height="48sp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/azul_oscuro"
        android:text="Lista de deseos"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anunciosPerfil" />
</androidx.constraintlayout.widget.ConstraintLayout>